#!/usr/bin/env ruby -> syntax higlight


def main() do
  age = get("Enter ur age: "):int()

  # each if condition can only have 1 end
  # no matter how many elif  or else

  # Simple if
  if age>=18 do
      println("can vote")
  end

  # Simple If-Else
  if age>=18 do
      println("can vote")
  else do
      println("cant vote")
  end


  # Simple If-Elif-Else

  if age <18 do
      println("Minor")
  elif age <= 65 do
      println("Adult")
  else do
      println("Senior")
  end

end
